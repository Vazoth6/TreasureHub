<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - TreasureHub</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/TreasureHub.styles.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">TreasureHub</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item dropdown-large">
                        <a class="nav-link dropdown-toggle text-dark" href="#" id="collectionsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Coleções
                        </a>
                        
                        <div class="dropdown-menu dropdown-menu-right dropdown-large p-3" aria-labelledby="collectionsDropdown">
                            <div class="row">
                                <!-- Cartas Colecionáveis -->
                                <div class="col-md-3">
                                    <h6 class="dropdown-header">Cartas Colecionáveis</h6>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="/colecoes/cartas-pokemon">Pokemon</a>
                                    <a class="dropdown-item" href="/colecoes/cartas-nfl">NFL</a>
                                    <a class="dropdown-item" href="/colecoes/cartas-yugioh">Yu-Gi-Oh!</a>
                                    <a class="dropdown-item" href="/colecoes/cartas-nba">NBA</a>
                                </div>
                                <!-- Video-Jogos -->
                                <div class="col-md-3">
                                    <h6 class="dropdown-header">Video-Jogos</h6>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="#">Final Fantasy XVI</a>
                                    <a class="dropdown-item" href="#">Star Wars Jedi: Survivor</a>
                                </div>
                                <!-- Consolas -->
                                <div class="col-md-3">
                                    <h6 class="dropdown-header">Consolas</h6>
                                    <div class="dropdown-divider"></div>
                                </div>
                                <!-- Figuras -->
                                <div class="col-md-3">
                                    <h6 class="dropdown-header">Figuras</h6>
                                    <div class="dropdown-divider"></div>
                                </div>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2025 - TreasureHub - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>